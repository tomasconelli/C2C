@model C2C_MVC.ViewModels.CategoriaViewModel
@{
    ViewBag.Title = "Registro de Categorias";
}

<div class="card">
    <div class="card-header">
        <h3>Categorias</h3>
    </div>
    <div class="card-body">
        <form action="/categoria/update" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="CategoriaId" value="@Model.CategoriaId" />
            <div class="form-group">
                <label>Nombre de Categoría:</label>
                <input type="text" name="CategoriaName" value="@Model.CategoriaName" class="form-control" />
                @Html.ValidationMessageFor(m => m.CategoriaName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Guardar <i class="fa fa-save"></i></button>
                <button type="reset" class="btn btn-danger">Restablecer <i class="fas fa-trash"></i></button>
            </div>
        </form>
    </div>

</div>