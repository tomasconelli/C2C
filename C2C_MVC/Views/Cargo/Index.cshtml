@model C2C_MVC.ViewModels.CargoViewModel
@{
    ViewBag.Title = "Registro de Cargos";
}

<div class="card">
    <div class="card-header">
        <h3>Cargos</h3>
    </div>
    <div class="card-body">
        <form action="/cargo/crear" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label>Nombre del Cargo:</label>
                <input type="text" name="CargoName" value="@Model.CargoName" class="form-control" />
                @Html.ValidationMessageFor(m => m.CargoName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Guardar <i class="fa fa-save"></i></button>
                <button type="reset" class="btn btn-danger">Restablecer <i class="fas fa-trash"></i></button>
            </div>
        </form>
    </div>

</div>

<h3 class="card-title">Cargos Registrados</h3>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead class="thead-darker">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Gestión</th>
            </tr>
        </thead>
        @foreach (var item in Model.Cargos)
        {
        <tr>

            <td>@item.CargoId</td>
            <td>@item.CargoName</td>
            <td>
                <a href="/cargo/Update/@item.CargoId" class="btn btn-info btn-sm" title="Modificar">
                    <i class="fa fa-pencil"></i>
                </a>
            </td>
        </tr>
        }
    </table>
</div>
<a href="/home">Home</a>