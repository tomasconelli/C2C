@model C2C_MVC.ViewModels.MPagoViewModel
@{
    ViewBag.Title = "Actualización de M. Pagos";

}

<div class="card">
    <div class="card-header">
        <h3>Medios de Pago</h3>
    </div>
    <div class="card-body">
        <form action="/mpago/update" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="MPagoId" value="@Model.MPagoId" />
            <div class="form-group">
                <label>Nombre del Medio de Pago:</label>
                <input type="text" name="MPagoName" value="@Model.MPagoName" class="form-control" />
                @Html.ValidationMessageFor(m => m.MPagoName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Guardar <i class="fa fa-save"></i></button>
                <button type="reset" class="btn btn-danger">Restablecer <i class="fas fa-trash"></i></button>
            </div>
        </form>
    </div>

</div>
<a href="/home">Home</a>