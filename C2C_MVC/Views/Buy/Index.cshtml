@model List<C2C_MVC.Models.Buy>
@{
    ViewBag.Title = "Compra de Productos";
}

@if (Model.Count == 0)
{
    <div class="alert alert-warning">
        Aún no se han ingresado compras, <a href="/buy/create" class="btn btn-primary"><i class="fa fa-plus"></i> ingrese una aquí</a>
    </div>
}
else
{
    <div class="alert alert-info mt-5">
        Ingrese sus facturas <a href="/buy/create" class="btn btn-primary"><i class="fa fa-plus"></i> aquí</a>
    </div>
    <div class="card">
        <div class="card-header">Compras</div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Usuario</th>
                        <th>Total</th>
                        <th>Fecha</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BuyId</td>
                            <td>@item.Author.NombreCompleto</td>
                            <td>@item.Total</td>
                            <td>@item.CreatedAt</td>
                            <td>
                                <a href="/buy/edit/@item.BuyId" class="btn btn-info"><i class="fa fa-pencil"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
<a href="/home">Home</a>
