@model C2C_MVC.ViewModels.VentaViewModel


@{
    ViewBag.Title = "Detalle de Ventas";

}


<h3 class="card-title">Ventas Registradas</h3>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead class="thead-darker">
            <tr>
                <th>#</th>
                <th>Monto</th>
                <th>Cliente</th>
                <th>Vendedor</th>
                <th>Medio de Pago</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Ver</th>
            </tr>
        </thead>
        @foreach (var item in Model.Ventas)
        {

            <tr>

                <td>@item.VentaId</td>
                <td>@item.VentaMonto</td>
                <td>@item.NombreCVenta</td>
                <td>@item.User.NombreUser</td>
                <td>@item.MPago.MPagoName</td>
                <td>@item.VentaFecha</td>
                <td>@item.VentaHora</td>
                <td>
                    <a href="/venta/detalle/@item.VentaId" name="q" class="btn btn-info btn-sm" title="Modificar">
                        <i class="fa fa-pencil"></i>
                    </a>

                </td>
            </tr>
        }
    </table>
    <a href="/home">Home</a>
</div>